generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OfferStatus {
  PENDING
  APPROVED
  REJECTED
}

model Offer {
  id          String @id @default(uuid())
  title       String
  description String
  price       Float

  storeLat Float
  storeLng Float

  status   OfferStatus @default(PENDING)
  isActive Boolean     @default(false)

  createdAt DateTime @default(now())

  vendorId String
  vendor   VendorProfile @relation("VendorProfileToOffer", fields: [vendorId], references: [id])
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String
  role          Role
  createdAt     DateTime       @default(now())
  vendorProfile VendorProfile?
}

model VendorProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  shopName  String
  ownerName String
  kycDocs   String
  status    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  offers    Offer[]  @relation("VendorProfileToOffer")
}

enum Role {
  ADMIN
  VENDOR_PENDING
  VENDOR_APPROVED
}
